<h1 class="mb-1 restaurant-show-title">編輯餐廳</h1>
<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST" class="create" name="create">
  <div class="home">
    <a href="/">
      <i class="fas fa-home" style="font-size: 50px;"></i>
    </a>
  </div>
  <div class="input-group create-box">
    <div class="input-group-prepend create-restaurant">
      <span class="input-group-text">餐廳名稱</span>
      <input type="text" class="form-control" value="{{ restaurant.name }}" name="name">
    </div>
    <div class="input-group-prepend create-restaurant">
      <span class="input-group-text">Restaurant Name</span>
      <input type="text" class="form-control" value="{{ restaurant.name_en}}" name="name_en">
    </div>
    <div class=" input-group-prepend create-restaurant">
      <span class="input-group-text">餐廳類別</span>
      <input type="text" class="form-control" value="{{ restaurant.category}}" name="category">
    </div>
    <div class="input-group-prepend create-restaurant">
      <span class="input-group-text">圖片</span>
      <input type="url" class="form-control" value="{{ restaurant.image }}" name="image">
    </div>
    <div class="input-group-prepend create-restaurant">
      <span class="input-group-text">地址</span>
      <input type="text" class="form-control" value="{{ restaurant.location }}" name="location">
    </div>
    <div class="input-group-prepend create-restaurant">
      <span class="input-group-text">電話</span>
      <input type="tel" class="form-control" value="{{ restaurant.phone }}" name="phone">
    </div>
    <div class="input-group-prepend create-restaurant">
      <span class="input-group-text">Google Map</span>
      <input type="url" class="form-control" value="{{ restaurant.google_map }}" name="google_map">
    </div>
    <div class="input-group-prepend create-restaurant">
      <span class="input-group-text">評價</span>
      <input type="number" class="form-control" value="{{ restaurant.rating }}" name="rating" step="0.1" min="1"
        max="5">
    </div>
    <div class="input-group-prepend create-restaurant" style="height: 150px;">
      <span class="input-group-text">餐廳簡介</span>
      <textarea class="form-control" name="description" style="height: 150px">{{ restaurant.description}}</textarea>
    </div>
  </div>
  <button type=" submit" class="create-restaurant" onclick="return check()">儲存</button>
</form>
<script>
  function check() {
    if ((document.create.name.value).trim() === "" || (document.create.name_en.value).trim() === "" || (document.create.description.value).trim() === "" || (document.create.location.value).trim() === "") {
      alert("未輸入");
      return false;
    }
  }
</script>